generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}


model Workflow{
  id            String @id @default(uuid())
  userId        String
  name          String
  description   String?
  definition    String
  executionPlan String?
  creditsCost   Int @default(0)
  status        String
  createdAt     DateTime @default(now())
  lastRunAt     DateTime?
  lastRunId     String?
  lastRunStatus String?
  updatedAt     DateTime @updatedAt
  cron          String? 
  nextRunAt     DateTime?
  executions    WorkflowExecution[]
  @@unique([name, userId])
}

model WorkflowExecution{
  id                String @id @default(cuid())
  workflowId        String
  userId            String
  trigger           String
  status            String
  createdAt         DateTime @default(now())
  startedAt         DateTime?
  completedAt       DateTime?
  creditsConsumed   Int @default(0)
  definition        String @default("{}")
  cursor            String?
  steps             ExecutionStep[]
  workflow          Workflow @relation(fields: [workflowId],references: [id],onDelete: Cascade)

}

model ExecutionStep{
   id                  String @id @default(cuid())
   executionId         String
   userId              String
   nodeId              String
   nodeType            String
   status              String
   createdAt           DateTime @default(now())
   startedAt           DateTime?
   completedAt         DateTime?
   inputs              String?
   outputs             String?
   dependencies        String @default("[]")
   creditsReserved     Int @default(0)
   creditsConsumed     Int @default(0)
   pauseReason         String?
   error               String?

   execution           WorkflowExecution @relation(fields: [executionId],references: [id],onDelete: Cascade)
   logs                ExecutionLog[]
   
   @@index([executionId, status])
}

model ExecutionLog{
    id                    String @id @default(cuid())
    level                 String
    message               String
    timestamp             DateTime @default(now())

    executionStepId       String
    executionStep         ExecutionStep @relation(fields: [executionStepId],references: [id],onDelete: Cascade)
}

model ScrapeSnapshot {
  id            String   @id @default(cuid())
  executionId   String
  nodeId        String
  url           String
  html          String
  timestamp     DateTime @default(now())
  
  @@unique([executionId, nodeId])
  @@index([executionId])
}

model UserBalance {
  userId String @id
  credits Int @default(0)
}

model Credential {
  id        String @id @default(cuid())
  userId    String
  name      String
  value     String
  createdAt DateTime @default(now())

  @@unique([userId,name])
}

model UserPurchase{
  id          String @id @default(cuid())
  userId      String
  stripeId    String
  description String
  amount      Int
  currency    String
  date        DateTime @default(now())
}